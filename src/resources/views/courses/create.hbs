<div class='mt-4'>
	<h3>Create new course</h3>
	<form method='POST' action='/courses/store'>
		<div class='form-group'>
			<label for='name'>Name</label>
			<input
				type='text'
				class='form-control'
				id='name'
				name='name'
				placeholder='Enter name'
			/>
		</div>
		<textarea class='form-group'>
			<label for='description'>Description</label>
			<textarea
				class='form-control'
				id='description'
				name='description'
				placeholder='Enter description'
			/></textarea>
		</div>
		<div class='form-group'>
			<label for='videoId'>videoId</label>
			<input
				type='text'
				class='form-control'
				id='videoId'
				name='videoId'
				placeholder='Enter videoId'
			/>
		</div>

		<button type='submit' class='btn btn-primary'>Add a new course</button>
	</form>
</div>