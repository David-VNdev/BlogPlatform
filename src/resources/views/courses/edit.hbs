<div class='mt-4'>
	<h3>Edit course {{course.name}}</h3>
	<form method='POST' action='/courses/{{course._id}}?_method=PUT'>
		<div class='form-group'>
			<label for='name'>Name</label>
			<input
				type='text'
				class='form-control'
				id='name'
				name='name'
				placeholder='Enter name'
				value={{course.name}}
			/>
		</div>
		<div class='form-group'>
			<label for='description'>Description</label>
			<textarea
				type='text'
				class='form-control'
				id='description'
				name='description'
				placeholder='Enter description'
			>{{course.description}}</textarea>

		</div>
		<div class='form-group'>
			<label for='videoId'>videoId</label>
			<input
				type='text'
				class='form-control'
				id='videoId'
				name='videoId'
				placeholder='Enter videoId'
				value={{course.videoId}}
			/>
		</div>

		<button type='submit' class='btn btn-primary'>Edit course</button>
	</form>
</div>